# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/wurana

# JWT Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h

# CORS Configuration
CLIENT_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Solana Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_TREASURY_WALLET=your-base64-encoded-treasury-wallet-secret-key
SOLANA_ESCROW_PROGRAM_ID=your-escrow-program-id

# NFT Configuration
NFT_MINT_AUTHORITY=your-mint-authority-public-key
NFT_METADATA_PROGRAM=your-metadata-program-id
NFT_COLLECTION_MINT=your-collection-mint-address
NFT_SELLER_FEE_BASIS_POINTS=500
NFT_SYMBOL=WRN
NFT_CREATORS=[{"address":"your-creator-address","share":100}]

# Metaplex Configuration
BUNDLR_ADDRESS=https://node1.bundlr.network
STORAGE_TYPE=bundlr
UPLOAD_TIMEOUT=60000
MAX_RETRIES=3

# Collection Configuration
DEFAULT_COLLECTION_NAME=Wurana Collection
DEFAULT_COLLECTION_SYMBOL=WRNC
DEFAULT_COLLECTION_DESCRIPTION=Official Wurana NFT Collection
DEFAULT_COLLECTION_FEE=0

# Civic Configuration
CIVIC_GATEWAY_URL=https://api.civic.com/gateway
CIVIC_APP_ID=your-civic-app-id
CIVIC_PRIVATE_KEY=your-civic-private-key

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=dev